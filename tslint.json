{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-plugin-prettier", "tslint-config-prettier"],
    "rules": {
        "interface-name": false,
        "max-classes-per-file": false,
        "no-console": false,
        "object-literal-sort-keys": false,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore"
            ]
        },
        "prettier": true
    }
}
